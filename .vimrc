syntax on

filetype plugin indent on

set nocompatible
set noerrorbells

set showcmd
set showmode
set laststatus=2

set nu
set scrolloff=5
set mouse=a
set mousehide

set ignorecase
set smartcase
set incsearch
set hlsearch
set showmatch

set expandtab
set tabstop=4
set shiftwidth=4
set autoindent

set nobackup
set noswapfile

set clipboard=unnamed
set paste

set belloff=all

nnoremap ; :

nnoremap <C-k> <C-w>k
nnoremap <C-j> <C-w>j
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l

nnoremap j gj
nnoremap k gk
nnoremap 0 g0
nnoremap $ g$

nnoremap <space> zz
nnoremap n nzz
nnoremap N Nzz
